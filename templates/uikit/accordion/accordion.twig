{#
/**
 * @file
 * Component for an accordion item.
 *
 * Variables:
 * - accordion_item_id: [number] Serve to map Accordion title to body.
 * - title: [string] Heading of the accordion item.
 * - body: [string] Text of the item.
 * - speed: [string] The speed of opening the accordion. Defaults to 'fast'.
 * - orientation: [string] The initial state of the item.  Defaults to 'open'
 */
#}
{% block accordion %}

  <section class="au-accordion">

    {% if orientation == 'open' %}
      <button class="au-accordion__title"
              aria-expanded="true" aria-controls="accordion-{{ id }}" onclick="return AU.accordion.Toggle( this{{ speed }} )">{{ title }}</button>

      <div class="au-accordion__body" id="accordion-{{ id }}">
        <div class="au-accordion__body-wrapper">{{ body }}</div>
      </div>

    {% else %}

      <button class="au-accordion__title au-accordion--closed"
              aria-expanded="false" aria-controls="accordion-{{ id }}" onclick="return AU.accordion.Toggle( this{{ speed }} )">{{ title }}</button>

      <div class="au-accordion__body au-accordion--closed" id="accordion-{{ id }}">
        <div class="au-accordion__body-wrapper">{{ body }}</div>
      </div>

    {% endif %}

  </section>

{% endblock %}
